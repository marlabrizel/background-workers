<div class="container-fluid quotes">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-10">
        <h1>Quotes</h1>
      </div>
      <div class="col-md-2">
        <%= link_to 'Generate', quotes_path, method: :post, class: 'btn btn-default btn-lg' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <hr>
        <% if @quotes.empty? %>
          <p>You don't have any quotes. To create some, click on the 'generate' button.</p>
        <% else %>
          <% @quotes.each do |quote| %>
            <div class="quote">
              <h5><%= quote.created_at.strftime("%A, %B %d %Y") %></h5>
              <p><%= quote.body %></p>
              <h4><%= quote.author %></h4>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-2">
  </div>
</div>
